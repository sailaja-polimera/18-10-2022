#include <stdio.h>
#include<stdlib.h>
struct node
{
    int data;
    struct node *link;
};
struct node* delspe(struct node *head,int pos)
{
    struct node *cur=head;
    struct node *pre=head;
    if(head==NULL)
    {
        printf("linked list is empty");
        
    }
    else if(pos==1)
    {
        head=cur->link;
        free(head);
        head=NULL;
    }
    else
    {
      
      while(pos!=1)
      {
          pre=cur;
          cur=cur->link;
          pos--;
          
      }
      pre->link=cur->link;
      free(cur);
      cur=NULL;
    }
    
  return head;
}
int main()
{
     
    struct node *head=NULL;
      struct node *p;
    struct node *ptr=malloc(sizeof(struct node));
    ptr->data=10;
    ptr->link=NULL;
    head=ptr;
    
    struct node *ptr1=malloc(sizeof(struct node));
    ptr1->data=20;
     ptr1->link=NULL;
      ptr->link=ptr1;
      
      struct node *ptr2=malloc(sizeof(struct node));
      ptr2->data=30;
      ptr2->link=NULL;
      ptr1->link=ptr2;
       
     struct node *ptr3=malloc(sizeof(struct node));
      ptr3->data=40;
      ptr3->link=NULL;
      ptr2->link=ptr3;
    
     int pos=2;
     head=delspe(head,pos);
     p=head;
     while(p!=NULL)
    {
    printf("%d ",p->data);
    p=p->link;
}
    return 0;
}
